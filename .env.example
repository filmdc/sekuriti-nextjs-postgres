# Database
POSTGRES_URL=postgresql://user:password@localhost:5432/sekuriti

# Authentication
AUTH_SECRET=your-32-character-secret-key-here

# Application
BASE_URL=http://localhost:3000

# Stripe (for subscription management)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email Service (for 2FA and notifications)
EMAIL_PROVIDER=resend # or sendgrid, mailjet, etc.
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=security@yourdomain.com
EMAIL_FROM_NAME=Sekuriti Security Team

# AWS S3 (for file storage - evidence, documents)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=sekuriti-files

# Support & Admin
SUPPORT_EMAIL=support@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Feature Flags
ENABLE_ONBOARDING=true
ENABLE_REGISTRATION=false
ENABLE_MARKETPLACE=true

# Security
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT=1440 # minutes (24 hours)
2FA_CODE_EXPIRY=300 # seconds (5 minutes)